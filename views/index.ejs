    /* Estilo para los miembros en una fila */
.staff-members {
    display: flex; /* Coloca los miembros en una fila */
    justify-content: space-between; /* Espaciado entre los miembros */
    gap: 20px; /* Espaciado entre los miembros */
    flex-wrap: wrap; /* Permite que los elementos se ajusten a nuevas líneas */
    overflow-x: auto; /* Permite el desplazamiento horizontal si hay demasiados elementos */
}

/* Miembro de staff */
.staff-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 200px; /* Ajusta el tamaño de cada miembro */
    margin-bottom: 20px; /* Espaciado inferior entre los miembros */
    flex-grow: 1; /* Permite que los miembros crezcan proporcionalmente si es necesario */
}

/* Estilo para las fotos de los miembros */
.staff-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.staff-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Estilo para el nombre y texto de los miembros */
.staff-name, .staff-text {
    text-align: center;
    margin-top: 5px;
}

/* Estilo para el contenedor general */
.staff-container-special-thanks {
    display: flex;
    flex-direction: column; /* Coloca todo en una columna */
    align-items: center; /* Centra todo en el medio */
    justify-content: center; /* Alinea los elementos verticalmente */
    margin-top: 20px;
    margin-bottom: 0; /* Elimina el margen inferior */
    padding-bottom: 0; /* Elimina el relleno inferior */
}
.staff-container{
display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}
.sobrenosotros-container{
    margin-top: 20px;
    text-align: center;
}
/* Estilo para el texto común debajo de los miembros */
.staff-text-common {
    margin-top: 20px;
    text-align: center;
}

/* Estilo para el pie de página */
footer {
    margin-top: 0; /* Elimina el margen superior */
    padding-top: 0; /* Elimina el relleno superior */
}

/* Estilo para los administradores */
.admin-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Alinea los miembros en el centro */
    margin-top: 20px;
}

.admin-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20px;
    width: 300px; /* Ancho fijo para cada miembro */
}

/* Estilo para la foto de los administradores */
.admin-photo {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.admin-photo img {
    height: auto; /* Mantiene la proporción de la imagen */
}

/* Estilo para el texto de los administradores */
.admin-text {
    margin-left: 20px;
    text-align: center;
}

.admin-name {
    font-size: 30px;
    font-weight: bold;
}

.admin-description {
    font-size: 16px;
}

/* Media Queries para pantallas más pequeñas */
@media (max-width: 768px) {
    .staff-members {
        justify-content: center; /* Centra los elementos en pantallas pequeñas */
    }

    .staff-member {
        width: 100%; /* Hace que los miembros ocupen el 100% del ancho en pantallas pequeñas */
        margin-bottom: 20px; /* Espaciado entre miembros */
    }

    .staff-photo {
        width: 120px; /* Ajusta el tamaño de las fotos en pantallas más pequeñas */
        height: 120px;
    }

    .admin-container {
        flex-direction: column;
        align-items: center; /* Centra los elementos en pantallas pequeñas */
    }

    .admin-member {
        width: 80%; /* Ajusta el ancho a un 80% en pantallas pequeñas */
        margin-bottom: 20px; /* Espaciado entre miembros */
    }

    .admin-name {
        font-size: 24px; /* Reduce el tamaño del nombre en pantallas pequeñas */
    }

    .admin-description {
        font-size: 14px; /* Reduce el tamaño de la descripción */
    }
}


